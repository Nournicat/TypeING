<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.effect.Bloom?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane style="-fx-background-color: linear-gradient(to bottom, #0abab5, #96dfe8);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.ssau.operatingsystem.project.typeingapp.SplashController">
    <children>

        <Label fx:id="label1" layoutX="200" layoutY="100" text="Приветствуем вас!">
            <font>
                <Font name="Arial Italic" size="20.0" />
            </font>
        </Label>

        <Label fx:id="label2" layoutX="200" layoutY="130" opacity="0" text="Загрузка приложения...">
            <font>
                <Font name="Arial Italic" size="20.0" />
            </font>
        </Label>

        <Label fx:id="label3" layoutX="200" layoutY="160" opacity="0" text="Почти готово...">
            <font>
                <Font name="Arial Italic" size="20.0" />
            </font>
        </Label>

        <ProgressBar fx:id="progressBar" layoutX="150" layoutY="220" prefWidth="300">
            <effect>
                <Bloom />
            </effect>
        </ProgressBar>
    </children>
</AnchorPane>
